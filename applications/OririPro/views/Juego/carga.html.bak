                                          ajax_setCal(this,'plus8',time);});
        jQuery('.plus6').click(function(){time=jQuery('.tiempo').html();
                                          ajax_setCal(this,'plus6',time);});
        jQuery('.plus4').click(function(){time=jQuery('.tiempo').html();
                                          ajax_setCal(this,'plus4',time);});
                                     });
</script>
