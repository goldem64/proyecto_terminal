{{extend 'layout.html'}}
            <div class="row">
                <div class="col-md-6">
                    <img src='{{=URL('static/img','avatar.png')}}' style="width: 300px; margin: 0 auto;"  /> 
                    <i class="fa fa-info-circle fa-2x info" data-toggle="modal" data-target="#myModal"></i>
                    <br />
                    <p>Estado:{{=partida.Estado}}</p>
                        <p>Dinero:{{=partida.Dinero}}</p>
                    <p>Avance del Juego</p>
                     <p>Creditos:
                         {{=partida.Creditos}}
                    </p>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                            0%
                        </div>
                    </div>
                </div>   
                <div class="col-md-6">
                    <p>Energia</p>
                    <div class="progress">
                        <div id="total" class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                            100%
                        </div>
                    </div>
                    <div>
                        <strong><i class="fa fa-users"></i> Familia</strong>
                        <input id="familia" value="0" type="range" name="quantity" min="0" max="100" onchange="showValueF(this.value)">
                        <strong><i class="fa fa-angellist"></i> Social</strong>
                        <input id="social" value="0" type="range" min="0" max="100" onchange="showValueS(this.value)">
                        <strong><i class="fa fa-child"></i> Trabajo</strong>
                        <input id="trabajo" value="0" type="range" name="quantity" min="0" max="100" onchange="showValueT(this.value)">
                        <strong><i class="fa fa-book"></i> Estudio</strong>
                        <input id="estudio" value="0" type="range" name="quantity" min="0" max="100" onchange="showValueE(this.value)">
                    </div>
                </div>                 
                <div class="col-md-6">
                    <h1>Pericias</h1>
                    <center>
                        <img src='{{=URL('static/img','grafica.png')}}' />
                    </center>
                </div>                
                <div class="col-md-6">
                    <center>
                        {{if partida.Dinero<2300:}}
                        <button class="btn btn-primary btn-lg" onclick="ajax_setBaja()">Solicitar Baja Temporal<i class="fa fa-share"></i></button>
                        {{else:}}
                        <button class="btn btn-primary btn-lg" onclick="ajax_setT()">IR AL SEMESTRE {{if not session.semestre:}}
                            {{=1}}{{else:}}{{=session.semestre+1}}{{pass}}<i class="fa fa-share"></i></button>
                    {{pass}}
                    </center>
                </div>   
            </div>

<script type="application/javascript">
    var ts=0;
    var tf=0;
    var te=0;
    var tt=0;
    var total=0;
function showValueS(newValue)
{
    total=parseInt(document.getElementById("total").innerHTML);
    sub=tt+te+tf;
    temp=parseInt(newValue)+sub;
    if(temp>100){
        temp=100;
        ts=100-sub;
    }
    else{
        ts=parseInt(newValue);} 
    document.getElementById("social").value=ts;
    document.getElementById("total").innerHTML=100-temp;
}
    function showValueT(newValue)
{
    total=parseInt(document.getElementById("total").innerHTML);
    sub=ts+te+tf;
    temp=parseInt(newValue)+sub;
    //tt=parseInt(newValue);
    if(temp>100){
        temp=100;
        tt=100-sub;
    }
    else{
    tt=parseInt(newValue);}
    document.getElementById("trabajo").value=tt;
    document.getElementById("total").innerHTML=100-temp;
}
        function showValueE(newValue)
{
    total=parseInt(document.getElementById("total").innerHTML);
    sub=ts+tt+tf;
    temp=parseInt(newValue)+sub;
    if(temp>100){
        temp=100;
        te=100-sub;
    }
    else{
    te=parseInt(newValue);}
    document.getElementById("estudio").value=te;
    document.getElementById("total").innerHTML=100-temp;
}
            function showValueF(newValue)
{
    total=parseInt(document.getElementById("total").innerHTML);
    sub=ts+tt+te;
    temp=parseInt(newValue)+sub;
    if(temp>100){
        temp=100;
        tf=100-sub;
    }
    else{
    tf=parseInt(newValue);}
    document.getElementById("familia").value=tf;
    document.getElementById("total").innerHTML=100-temp;
}
    function ajax_setT(){
        var time=document.getElementById("estudio").value;
        var tt=document.getElementById("trabajo").value;
        if(time<=10){alert("El tiempo designado al Estudio es menor a 10%");return;}
    jQuery.ajax({method:'post',url:'{{=URL('savetime')}}',
                 data:{'time':time,'trabajo':tt},
               success: function (){
        window.location.assign("{{=URL('oferta',scheme='http')}}");
    }});
}

    function ajax_setBaja(){
        var time=document.getElementById("estudio").value;
        var tt=document.getElementById("trabajo").value;
        if(tt==0){alert("El tiempo designado al trabajo es 0");return;}
    jQuery.ajax({method:'post',url:'{{=URL('savetime')}}',
                 data:{'time':time,'trabajo':tt},
               success: function (){
        window.location.assign("{{=URL('BajaTemporal',scheme='http')}}");
    }});
}
</script>
